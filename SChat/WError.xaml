<Window x:Class="SChat.WError"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Warcraft II" Height="153" Width="279" WindowStyle="None" Background="{x:Null}" Foreground="White" Icon="img/icons/icon_w2.png" ShowInTaskbar="False" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" Topmost="True">
    <Grid Margin="4">
        <Viewbox x:Name="vbox" HorizontalAlignment="Left" VerticalAlignment="Top" Stretch="Uniform">
            <Canvas x:Name="canErr" HorizontalAlignment="Left" Height="148" VerticalAlignment="Top" Width="284">
                <Canvas.Background>
                    <ImageBrush ImageSource="img/glues/w2bn/bgWError.png" Stretch="Uniform"/>
                </Canvas.Background>
                <TextBlock x:Name="lblErrormsg" TextWrapping="Wrap" Canvas.Left="15" Canvas.Top="15" Width="251" Height="91" FontFamily="Verdana" FontSize="14"/>
                <Image x:Name="btnOK" Source="img/glues/w2bn/btnWError.png"  PreviewMouseDown="btnOK_PreviewMouseDown" MouseUp="btnOK_Click" Height="28" Canvas.Left="85" Canvas.Top="106" Width="110" Stretch="Fill"/>
                <Label x:Name="lblBtnOK" Content="OK" Foreground="White" FontSize="14"   PreviewMouseDown="btnOK_PreviewMouseDown" MouseUp="btnOK_Click" Canvas.Left="126" Canvas.Top="105"/>
            </Canvas>
        </Viewbox>
    </Grid>
</Window>
